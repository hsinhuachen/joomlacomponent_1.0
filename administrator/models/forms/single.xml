<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
            name="id" 
            type="hidden" />
		<field 
            name="title" 
            type="textarea" 
            label="標題"
            required="true"
            class="normal" />
      <field 
            name="excerpt" 
            type="textarea"
            label="簡介"
            description=""
            class="normal" />
      <field 
            name="message" 
            type="editor"
		label="內容"
            filter="JComponentHelper::filterText" 
            class="" />
      <field 
            name="date" 
            type="text"
            label="日期"
            class="normal" />
      <field 
            name="thumb" 
            type="media" 
            label="清單縮圖"
            class="normal" />
      <field 
            name="photo" 
            type="media" 
            label="圖片"
            class="" />
	<field 
            name="year" 
            type="text"
		label="年份"
            class="normal" />
      <field
            name="datetime"
            type="date"
            label="發佈日期" />
      <field 
            name="account" 
            type="text" 
            label="作者"
            class="" />
	<field 
            name="ordering" 
            type="text" 
            label="排序"
            class="" />
	<field name="state" type="radio"
            class="btn-group btn-group-yesno"
            label="發佈"
            description=""
            default="1">
            <option value="1">是</option>
            <option value="0">否</option>
      </field>
	</fieldset>

</form>
